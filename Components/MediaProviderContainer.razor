@using Diyokee.MediaProviders
@using static Diyokee.MediaProviders.IMediaProvider

<div
    class="folders scroller"
    tabindex="0">
    <Folders
        Provider="@Provider"
        RelativePath=""
        SelectedFolderChanged="OnSelectedFolderChanged"
        @ref="FoldersUI"/>
</div>

@code {
    [Parameter]
    public IMediaProvider? Provider { get; set; }

    [Parameter]
    public EventCallback<string> SelectedFolderChanged { get; set; }

    public Folders? FoldersUI;

    private void OnSelectedFolderChanged(string folder) {
        SelectedFolderChanged.InvokeAsync(folder);
    }
}